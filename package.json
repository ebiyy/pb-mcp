{
	"name": "pb-mcp",
	"version": "0.1.0",
	"type": "module",
	"bin": {
		"pb-mcp": "./build/index.js"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"check": "biome check src",
		"fix": "biome check --write src",
		"typecheck": "tsc --noEmit",
		"quality": "npm run typecheck && npm run check && npm run test"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.25.3"
	},
	"devDependencies": {
		"@types/node": "^22.0.0",
		"@biomejs/biome": "^1.9.0",
		"lefthook": "^1.11.0",
		"typescript": "^5.7.0",
		"vitest": "^3.0.0"
	},
	"engines": {
		"node": ">=22.0.0"
	}
}
